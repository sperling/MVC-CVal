@model Demo.Controllers.Checkout
           
@{
    ViewBag.Title = "Home Page";
}

<h2>@ViewBag.Message</h2>
<p>
    To learn more about ASP.NET MVC visit <a href="http://asp.net/mvc" title="ASP.NET MVC Website">http://asp.net/mvc</a>.
</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    @Html.LabelFor(x => x.Customer.FirstName)
    @Html.TextBoxFor(x => x.Customer.FirstName)
    @Html.ValidationMessageFor(x => x.Customer.FirstName)

    <br /><span>Använd efternamn</span><br />
    @Html.CheckBoxFor(x => x.ShowCustomer)<br />
    
    <div id="validate" style='@(Model.ShowCustomer ? "" : "display: none;")'>
        @Html.LabelFor(x => x.Customer.LastName)<br />    
        @Html.TextBoxFor(x => x.Customer.LastName)<br />
        @Html.ValidationMessageFor(x => x.Customer.LastName)<br />

        @Html.LabelFor(x => x.Customer.IntValue)<br />    
        @Html.TextBoxFor(x => x.Customer.IntValue)<br />
        @Html.ValidationMessageFor(x => x.Customer.IntValue)<br />

        @Html.LabelFor(x => x.Customer.MaxLength)<br />    
        @Html.TextBoxFor(x => x.Customer.MaxLength)<br />
        @Html.ValidationMessageFor(x => x.Customer.MaxLength)<br />

        @Html.LabelFor(x => x.Customer.MinAndMaxLength)<br />    
        @Html.TextBoxFor(x => x.Customer.MinAndMaxLength)<br />
        @Html.ValidationMessageFor(x => x.Customer.MinAndMaxLength)<br />
    </div>

    <input type="submit" />
}

<script type="text/javascript">
    $(document).ready(function () {

        $('#@Html.ViewData.TemplateInfo.GetFullHtmlFieldId("ShowCustomer")').change(function () {
            if ($(this).is(':checked')) {
                $('#validate').css('display', '');            
            }
            else {
                $('#validate').css('display', 'none');
            }
        });
    });
</script>